  mixin tablerow(name, email, phone, testscore)
    tr
      td.checkbox 
        input(type="checkbox")
      td.name= name
      td.email= email
      td.phone= phone
      td.testscore.hidden= testscore
  
  table.applicants
    tr
      th.checkbox
      th.name Name
      th.email Email
      th.phone Phone
      th.testscore.hidden Test Score        
