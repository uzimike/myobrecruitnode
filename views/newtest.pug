extends layout

block content
      
  h1 #{title}
  h2 
    .icon.small.add 
    span #{subtitle}
  .whole-form-building-container
    
    .side-boxes.wfb-child
      .drag-box.from.fields
        .inner-container    
          h3 Fields
          
          mixin dragfieldbox(name)
            .field.drag
              a
                span.name= name
              
          +dragfieldbox('Text')
          +dragfieldbox('Checkbox')
          +dragfieldbox('List')
        
      .drag-box.from.options
        .inner-container
          h3 Options
          .option
              span Time Limit
              .input
                input(placeholder="0:00")

    .form-building-container.wfb-child
      .inner-container
        .inner-inner-container
            input(type="text").title
            .fields
              mixin fieldbox(name, type)
                .field
                  a
                    span.expand â–¼
                    span.name= name
                    span.type= type
              +fieldbox('What technique do you use for big data?', 'Text')
          
    include newobjectbuttonset
