extends layout

block content
  
  h1 #{title}
  h2 
    .icon.small.add 
    span #{subtitle}
  .whole-form-building-container
    
    .side-boxes.wfb-child
      .drag-box.from.fields
        .inner-container    
          h3 Fields
          
          mixin dragfieldbox(name)
            .field.drag
              a
                span.name= name
              
          +dragfieldbox('Text')
          +dragfieldbox('Checkbox')
          +dragfieldbox('List')
        
      .drag-box.from.options
        .inner-container
          h3 Options
          .slidecbcontainer
            span Require CV
            .slidecheckbox
              input#requirecv(type='checkbox', value='None', name='check', checked='')
              label(for='requirecv')

    .form-building-container.wfb-child
      .inner-container
        .inner-inner-container
            input(type="text", placeholder="").title
            .fields
              mixin fieldbox(name, type)
                .field
                  a
                    span.expand â–¼
                    span.name= name
                    span.type= type
              +fieldbox('Name', 'Name')
              +fieldbox('Email', 'Email')
              +fieldbox('Phone', 'Phone')
              +fieldbox("Do you have a full driver's license?", 'checkbox')
          
    include newobjectbuttonset
